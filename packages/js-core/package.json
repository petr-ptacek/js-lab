{
  "name": "@petr-ptacek/js-core",
  "description": "JavaScript and TypeScript utilities.",
  "version": "0.0.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm clear",
    "build": "vite build",
    "types:build": "tsc -b ./tsconfig.types.json",
    "types:check": "tsc -b ./tsconfig.app.json",
    "types:watch": "tsc -b ./tsconfig.app.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "clear": "rimraf ./dist ./node_modules/.tmp",
    "prepublishOnly": "pnpm clear && pnpm types:check && pnpm test && pnpm build && pnpm types:build",
    "docs:dev": "pnpm typedoc && vitepress dev docs",
    "docs:build": "pnpm typedoc && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release:check": "pnpm types:check && pnpm test && pnpm build && pnpm types:build",
    "release:dry": "pnpm release:check && npm publish --dry-run"
  },
  "keywords": [
    "javascript",
    "typescript",
    "utilities",
    "math",
    "type-guards",
    "esm-only",
    "functional",
    "tree-shaking"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/petr-ptacek/js-lab/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/petr-ptacek/js-lab.git",
    "directory": "packages/js-core"
  },
  "homepage": "https://github.com/petr-ptacek/js-lab",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "devDependencies": {
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=20"
  }
}
