{
  "name": "@petr-ptacek/js-lab",
  "author": {
    "name": "Petr PtÃ¡Äek",
    "email": "petr.ptacek99@gmail.com"
  },
  "description": "Place for developing and playing with JavaScript world.",
  "private": true,
  "type": "module",
  "scripts": {
    "docs:api": "typedoc",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api:js-core": "typedoc --options typedoc.js-core.json",
    "type-check:packages": "pnpm -r --filter \"./packages/**\" run type-check",
    "test:packages": "pnpm -r --filter \"./packages/**\" run test",
    "build:packages": "pnpm -r --filter \"./packages/**\" run build",
    "build:types": "vue-tsc -b ./tsconfig.types.json",
    "test": "pnpm run test:packages",
    "verify": "pnpm run type-check:packages && pnpm run test:packages",
    "build": "pnpm run verify && pnpm run build:packages && pnpm run build:types",
    "dev:playground": "pnpm --dir apps/playground/vue run dev",
    "prepare": "husky",
    "clean": "pnpm -r exec -- rm -rf node_modules & rm -rf node_modules"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petr-ptacek/js-lab.git"
  },
  "bugs": {
    "url": "https://github.com/petr-ptacek/js-lab/issues"
  },
  "keywords": [
    "vue",
    "js",
    "vue3",
    "monorepo",
    "composables",
    "components",
    "ui",
    "utils",
    "playground"
  ],
  "license": "MIT",
  "homepage": "https://github.com/petr-ptacek/js-lab#readme",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.28.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node20": "^20.1.9",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.4"
  }
}
