{
  "name": "@petr-ptacek/js-core",
  "description": "JavaScript and TypeScript utilities.",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm clear",
    "build": "vite build",
    "build:types": "tsc -b ./tsconfig.types.json",
    "type:check": "tsc -b ./tsconfig.app.json",
    "type:watch": "tsc -b ./tsconfig.app.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "clear": "rimraf ./dist ./node_modules/.tmp",
    "prepublishOnly": "pnpm clear && pnpm type:check && pnpm test && pnpm build && pnpm build:types",
    "docs:api:index": "tsx docs/scripts/generate-api-index.ts",
    "docs:dev": "pnpm docs:api:index && vitepress dev docs",
    "docs:build": "pnpm docs:api:index && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "javascript",
    "typescript",
    "utilities",
    "math",
    "type-guards",
    "esm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/petr-ptacek/js-lab.git",
    "directory": "packages/js-core"
  },
  "homepage": "https://github.com/petr-ptacek/js-lab",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "devDependencies": {
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=22"
  }
}
