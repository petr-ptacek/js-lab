{
  "name": "@petr-ptacek/vue-ecosystem",
  "author": "Petr Ptacek <petr.ptacek99@gmail.com>",
  "description": "Ecosystem of Vue.js composables, components, and shared tooling.",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @petr-ptacek/vue-core build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm -r test",
    "prepare": "husky",
    "clean": "pnpm -r exec -- rm -rf rimraf node_modules & rm -rf node_modules"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petr-ptacek/vue-ecosystem.git"
  },
  "bugs": {
    "url": "https://github.com/petr-ptacek/vue-ecosystem/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "monorepo",
    "composables",
    "components",
    "ui",
    "utils",
    "playground"
  ],
  "license": "MIT",
  "homepage": "https://github.com/petr-ptacek/vue-ecosystem#readme",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.0.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node20": "^20.1.8",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue-eslint-parser": "^10.2.0"
  }
}
