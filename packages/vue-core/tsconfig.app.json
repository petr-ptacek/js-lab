{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "../../tsconfig.app.base.json"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client"
    ],
    // @vue/tsconfig sets noEmit=true by default â€“ override for d.ts emit
    "noEmit": false,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "dist/types"
  },
  "references": [
    {
      "path": "../js-core/tsconfig.app.json"
    }
  ],
  "include": [
    "src/**/*"
  ]
}
